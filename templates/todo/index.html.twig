{% extends 'base.html.twig' %} 
{% block title %}Welcome{% endblock %} 
{% block body %}
    <div class="container bg-dark text-white mt-3 border rounded p-2">
        <form class="form" method="POST" action="/todos">
            <input type="text" class="form-control" placeholder="Write here your todo... press [Enter] to valid it">
        </form>
    </div>
    <div class="container text-white mt-1 border rounded p-1">
    {% for todo in todos %}
        <ul class="list-group">
            <li class="list-group-item d-flex justify-content-between align-items-center mt-1">
                <a href="">{{ todo}}</a>
                <span>
                <button class="btn text-primary" title="Add to doing"><i class="bi bi-journal-arrow-up"></i></button>
                <button class="btn text-success" title="Set as done"><i class="bi bi-check-circle"></i></button>
                <button class="btn text-danger" title="Remove"><i class="bi bi-trash"></i></button>
                </span>
            </li>
        </ul>
    {% endfor %}
    </div>

{% endblock %}